# MCP Server Environment Variables
# Copy this file to .env and fill in the values

# Server configuration
PORT=3000
LOG_LEVEL=info

# API Authentication
# OAuth2 authentication - Dexcom API
# You can either provide a pre-acquired token:
OAUTH_TOKEN_BEARERAUTH=your_oauth_token_here

# Or provide client credentials for automatic token acquisition:
OAUTH_CLIENT_ID_BEARERAUTH=your_client_id_here
OAUTH_CLIENT_SECRET_BEARERAUTH=your_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Add any other environment variables your API might need
